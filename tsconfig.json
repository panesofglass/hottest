{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "sourceMap": true,
        "lib": [ "dom", "es6" ],
        "jsx": "react",
        "preserveConstEnums": true
    },
    "include": [
        "src/*.ts",
        "src/*.tsx"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}
